{
  "name": "deps-harmony",
  "displayName": "deps-harmony",
  "description": "AI-powered dependency conflict resolver",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deps-harmony.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "deps-harmony.scanProject",
        "title": "Scan Project Dependencies",
        "icon": "$(refresh)"
      },
      {
        "command": "deps-harmony.viewProblem",
        "title": "View Problem Details"
      },
      {
        "command": "deps-harmony.viewSolution",
        "title": "View Solutions"
      },
      {
        "command": "deps-harmony.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "deps-harmony.executeSolution",
        "title": "Execute Solution"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deps-harmony-explorer",
          "title": "Deps Harmony",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "deps-harmony-explorer": [
        {
          "icon": "media/icon.svg",
          "id": "depsHarmony.dependencyTree",
          "name": "Dependencies",
          "type": "tree"
        },
        {
          "icon": "$(warning)",
          "id": "depsHarmony.conflictsList",
          "name": "Conflicts",
          "type": "tree"
        },
        {
          "icon": "$(lightbulb)",
          "id": "depsHarmony.solutionsList",
          "name": "Solutions",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "deps-harmony.scanProject",
          "when": "view == depsHarmony.dependencyTree",
          "group": "navigation"
        },
        {
          "command": "deps-harmony.refreshTree",
          "when": "view == depsHarmony.conflictsList || view == depsHarmony.solutionsList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "deps-harmony.viewProblem",
          "when": "view == depsHarmony.dependencyTree && viewItem == dependency-conflict",
          "group": "inline"
        },
        {
          "command": "deps-harmony.viewSolution",
          "when": "view == depsHarmony.dependencyTree && viewItem == dependency-conflict",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/semver": "^7.7.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "semver": "^7.7.2"
  }
}
